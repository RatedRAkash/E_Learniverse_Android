<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/oldNotificationTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old Notification Tutorial"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/newNotificationTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Notification Tutorial"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/registerUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register User"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/tutorialLiveData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LiveData Tutorial"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/callAuthorApi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Author Api"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/countDownTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count-Down Timer"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/btnMusicService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To Music Service"
            android:layout_margin="11dp"/>

        <Button
            android:id="@+id/btnBroadcastReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To AlarmManager/Broadcast Receiver"
            android:layout_margin="11dp"/>

    </LinearLayout>

</LinearLayout>


